---
const navigation = [
  { name: 'Accueil', href: '/' },
  {
    name: 'La société',
    href: '/notre-societe',
    children: [
      { name: 'Notre Présentation', href: '/notre-societe/presentation' },
      { name: 'Nos Références', href: '/notre-societe/references' },
      { name: 'Nos Compétences', href: '/notre-societe/competences' },
      { name: 'Nos Engagements', href: '/notre-societe/engagements' },
      { name: 'Contactez-nous', href: '/contact' },
    ]
  },
  {
    name: 'Notre savoir-faire',
    href: '/notre-savoir-faire',
    children: [
      { name: 'Nos Services', href: '/notre-savoir-faire/services' },
      { name: 'Nos Offres', href: '/notre-savoir-faire/offres' },
      { name: 'Nos Solutions', href: '/notre-savoir-faire/solutions' },
      { name: 'Nos Produits', href: '/notre-savoir-faire/produits' },
    ]
  },
  {
    name: 'Actualités / Blogs / Forum',
    href: '/blog',
    children: [
      { name: "Blog Actu' Arc Gestion", href: '/blog' },
      { name: "Blog Tech' Arc Gestion", href: 'https://blog.arcgestion.fr', external: true },
      { name: "Forum d'Entraide Logiciel", href: 'https://www.assistance-api.fr/index.php/forum/index', external: true },
      { name: 'Blog Assistance Logiciel', href: 'https://www.assistance-api.fr/index.php/blog', external: true },
    ]
  },
]
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <!-- Top bar -->
  <div class="bg-primary text-white py-2">
    <div class="container flex justify-between items-center text-sm">
      <a href="tel:0972476737" class="flex items-center gap-2 hover:text-secondary transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>09.72.47.67.37</span>
      </a>
      <a href="https://groupeaddictt.fr" target="_blank" rel="noopener" class="hidden md:flex items-center gap-2 hover:text-secondary">
        <span>Membre du Groupe ADDICTT</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>

  <!-- Main header -->
  <div class="container py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <img src="/images/logo-arcgestion.png" alt="Arc Gestion" class="h-12" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {navigation.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class="px-4 py-2 text-gray-700 hover:text-primary font-semibold flex items-center gap-1 transition-colors"
            >
              {item.name}
              {item.children && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            {item.children && (
              <div class="absolute left-0 mt-0 w-56 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border border-gray-100">
                <div class="py-2">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      target={'external' in child && child.external ? '_blank' : undefined}
                      rel={'external' in child && child.external ? 'noopener noreferrer' : undefined}
                      class="block px-4 py-2 text-gray-600 hover:bg-primary/5 hover:text-primary transition-colors"
                    >
                      {child.name}
                      {'external' in child && child.external && (
                        <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      )}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </nav>

      <!-- CTA Button -->
      <a href="/contact" class="hidden lg:inline-flex btn btn-secondary">
        Demander un devis
      </a>

      <!-- Mobile menu button -->
      <button
        type="button"
        class="lg:hidden p-2 text-gray-600 hover:text-primary"
        id="mobile-menu-button"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden border-t">
    <nav class="container py-4 space-y-2">
      {navigation.map((item) => (
        <div>
          <a
            href={item.href}
            class="block py-2 text-gray-700 hover:text-primary font-semibold"
          >
            {item.name}
          </a>
          {item.children && (
            <div class="pl-4 space-y-1">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  target={'external' in child && child.external ? '_blank' : undefined}
                  rel={'external' in child && child.external ? 'noopener noreferrer' : undefined}
                  class="block py-1 text-gray-500 hover:text-primary text-sm"
                >
                  {child.name}
                  {'external' in child && child.external && (
                    <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  )}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <a href="/contact" class="block w-full btn btn-secondary mt-4">
        Demander un devis
      </a>
    </nav>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button')
  const mobileMenu = document.getElementById('mobile-menu')

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
  })
</script>
