---
const footerLinks = {
  societe: [
    { name: 'Notre Présentation', href: '/notre-societe/presentation' },
    { name: 'Nos Références', href: '/notre-societe/references' },
    { name: 'Nos Compétences', href: '/notre-societe/competences' },
    { name: 'Nos Engagements', href: '/notre-societe/engagements' },
    { name: 'Devenir Partenaire', href: '/notre-societe/devenir-partenaire' },
    { name: 'Contactez-nous', href: '/contact' },
  ],
  savoirFaire: [
    { name: 'Nos Services', href: '/notre-savoir-faire/services' },
    { name: 'Nos Offres', href: '/notre-savoir-faire/offres' },
    { name: 'Nos Solutions', href: '/notre-savoir-faire/solutions' },
    { name: 'Nos Produits', href: '/notre-savoir-faire/produits' },
  ],
  autres: [
    { name: 'Démonstration Codial', href: '/codial/demonstration' },
    { name: 'Assistance', href: '/assistance' },
    { name: 'Télémaintenance', href: '/telemaintenance' },
    { name: 'Conditions générales de vente', href: '/cgv' },
    { name: 'Informations légales', href: '/mentions-legales' },
  ],
}

const partners = [
  { name: 'Arc Gestion Aquitaine', href: 'https://www.arcgestion-aquitaine.fr', logo: '/images/partners/arcgestion-aquitaine.png' },
  { name: 'Groupe ADDICTT', href: 'https://groupeaddictt.fr', logo: '/images/partners/groupe-addictt.png' },
  { name: 'Mon Partenaire Codial', href: 'https://www.monpartenaire-codial.fr', logo: '/images/partners/monpartenaire-codial.png' },
  { name: 'Expert Codial', href: 'https://www.expert-codial.fr', logo: '/images/partners/expert-codial.png' },
  { name: 'Facilit\'Action', href: 'https://facilitaction.fr', logo: '/images/partners/facilitaction.png' },
]
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main footer -->
  <div class="container py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company info -->
      <div class="lg:col-span-1">
        <img src="/images/logo-arcgestion-white.png" alt="Arc Gestion" class="h-10 mb-4" />
        <p class="text-sm text-gray-400 mb-4">
          Arc Gestion est spécialisée dans les logiciels de gestion pour les petites entreprises depuis plus de 20 ans. Distributeur agréé Sage et Codial.
        </p>
        <div class="space-y-2 text-sm">
          <a href="tel:0972476737" class="flex items-center gap-2 hover:text-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            09.72.47.67.37
          </a>
          <a href="mailto:contact@arcgestion.fr" class="flex items-center gap-2 hover:text-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            contact@arcgestion.fr
          </a>
        </div>
      </div>

      <!-- La société -->
      <div>
        <h3 class="text-white font-bold mb-4">La société</h3>
        <ul class="space-y-2 text-sm">
          {footerLinks.societe.map((link) => (
            <li>
              <a href={link.href} class="hover:text-secondary transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Notre savoir-faire -->
      <div>
        <h3 class="text-white font-bold mb-4">Notre savoir-faire</h3>
        <ul class="space-y-2 text-sm">
          {footerLinks.savoirFaire.map((link) => (
            <li>
              <a href={link.href} class="hover:text-secondary transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Autres -->
      <div>
        <h3 class="text-white font-bold mb-4">Autres informations</h3>
        <ul class="space-y-2 text-sm">
          {footerLinks.autres.map((link) => (
            <li>
              <a href={link.href} class="hover:text-secondary transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Partners -->
  <div class="border-t border-gray-800">
    <div class="container py-8">
      <p class="text-center text-sm text-gray-500 mb-6">Nos partenaires et marques</p>
      <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10">
        {partners.map((partner) => (
          <a
            href={partner.href}
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-60 hover:opacity-100 transition-opacity"
            title={partner.name}
          >
            <img src={partner.logo} alt={partner.name} class="h-10 w-auto" />
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="border-t border-gray-800">
    <div class="container py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-500">
        <p>&copy; {new Date().getFullYear()} Arc Gestion. Tous droits réservés.</p>
        <p>Membre du <a href="https://groupeaddictt.fr" target="_blank" rel="noopener" class="text-secondary hover:underline">Groupe ADDICTT</a></p>
      </div>
    </div>
  </div>
</footer>
