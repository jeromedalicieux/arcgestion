---
interface Props {
  title: string
  subtitle?: string
  image?: string
  showCTA?: boolean
}

const { title, subtitle, image = '/images/hero-bg.jpg', showCTA = true } = Astro.props
---

<section class="relative bg-primary overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container relative py-20 md:py-32">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-6 leading-tight">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl md:text-2xl text-white/90 mb-8">
          {subtitle}
        </p>
      )}
      {showCTA && (
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="btn btn-secondary">
            Demander un devis
          </a>
          <a href="tel:0972476737" class="btn btn-outline text-white border-white hover:bg-white hover:text-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            09.72.47.67.37
          </a>
        </div>
      )}
    </div>
  </div>
</section>
